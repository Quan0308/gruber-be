{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@db/*": ["libs/database/src/*"],
      "@my-workspace/database": ["libs/database/src/index.ts"],
      "@dtos": ["libs/dtos/src/index.ts"],
      "@libs": ["libs/src/index.ts"],
      "@middlewares": ["libs/middlewares/src/index.ts"],
      "@types": ["libs/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
