{
  "name": "gruber-be",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/gruber-be/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "gruber-be:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "gruber-be:build:development"
        },
        "production": {
          "buildTarget": "gruber-be:build:production"
        }
      }
    },
    "create-migration": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "typeorm migration:create",
        "cwd": "apps/gruber-be/src/migrations"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "typeorm migration:run",
        "cwd": "apps/gruber-be/src/migrations"
      }
    }
  }
}
